{
  "expo": {
    "name": "LeLeRun",
    "slug": "test-expo",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "lelerun",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "LeLeRun cần vị trí của bạn để theo dõi lộ trình chạy.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "LeLeRun cần quyền truy cập vị trí chạy ngầm để tiếp tục theo dõi khi màn hình tắt.",
        "NSMotionUsageDescription": "LeLeRun sử dụng dữ liệu chuyển động để phát hiện bạn đang chạy hay đi bộ.",
        "UIBackgroundModes": [
          "location"
        ]
      },
      "bundleIdentifier": "com.lelerun.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#58CC02",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "ACTIVITY_RECOGNITION"
      ],
      "package": "com.lelerun.app"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      // [
      //   "expo-location",
      //   {
      //     "locationAlwaysAndWhenInUsePermission": "LeLeRun needs background location to track your run even when the screen is off.",
      //     "locationWhenInUsePermission": "LeLeRun needs your location to track your running route.",
      //     "isAndroidBackgroundLocationEnabled": true,
      //     "isAndroidForegroundServiceEnabled": true
      //   }
      // ],
      [
        "expo-sensors",
        {
          "motionPermission": "LeLeRun sử dụng dữ liệu chuyển động để xác minh hoạt động chạy."
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#58CC02"
        }
      ],
      "@maplibre/maplibre-react-native"
    ],
    "experiments": {
      "typedRoutes": false,
      "reactCompiler": true
    },
    "cli": {
      "appVersionSource": "remote"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "92f4a8b5-8113-4d42-b809-90f7b76eab63"
      }
    }
  }
}